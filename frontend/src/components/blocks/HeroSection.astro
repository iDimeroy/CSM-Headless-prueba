---
// HeroSection block component
export interface Props {
  title: string;
  subtitle?: string;
  ctaText?: string;
  ctaUrl?: string;
  backgroundImage?: string;
}
const { title, subtitle, ctaText, ctaUrl, backgroundImage } = Astro.props;

const resolveImageUrl = (url?: string) => {
  if (!url) return '';
  if (url.startsWith('/')) {
    return `${import.meta.env.PUBLIC_API_URL || 'http://localhost:8080'}${url}`;
  }
  return url;
};
const finalBgImage = resolveImageUrl(backgroundImage);
---

<section
  class="hero"
  style={finalBgImage ? `--hero-bg: url('${finalBgImage}')` : ''}
>
  <div class="hero__overlay" />
  <div class="container hero__content">
    <h1 class="hero__title">{title}</h1>
    {subtitle && <p class="hero__subtitle">{subtitle}</p>}
    {ctaText && ctaUrl && (
      <a href={ctaUrl} class="hero__cta">
        {ctaText}
        <span class="hero__cta-arrow">â†’</span>
      </a>
    )}
  </div>
</section>

<style>
  .hero {
    position: relative;
    min-height: 90vh;
    display: flex;
    align-items: center;
    background-image: var(--hero-bg, linear-gradient(135deg, #1e293b 0%, #0f172a 100%));
    background-size: cover;
    background-position: center;
    overflow: hidden;
  }

  .hero__overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      135deg,
      rgba(6, 11, 40, 0.85) 0%,
      rgba(99, 102, 241, 0.25) 100%
    );
  }

  .hero__content {
    position: relative;
    z-index: 1;
    max-width: 800px;
  }

  .hero__title {
    font-size: clamp(2.5rem, 6vw, 4.5rem);
    font-weight: 800;
    line-height: 1.1;
    letter-spacing: -0.02em;
    background: linear-gradient(135deg, #f1f5f9 0%, #a5b4fc 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin-bottom: 1.5rem;
  }

  .hero__subtitle {
    font-size: clamp(1.1rem, 2.5vw, 1.35rem);
    color: #cbd5e1;
    max-width: 600px;
    margin-bottom: 2.5rem;
    line-height: 1.7;
  }

  .hero__cta {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    background: var(--color-primary);
    color: #fff;
    padding: 1rem 2rem;
    border-radius: 9999px;
    font-weight: 600;
    font-size: 1.05rem;
    transition: background 0.2s ease, transform 0.2s ease, box-shadow 0.2s ease;
    box-shadow: 0 0 30px rgba(99, 102, 241, 0.4);
    text-decoration: none;
  }

  .hero__cta:hover {
    background: var(--color-primary-dark);
    transform: translateY(-2px);
    box-shadow: 0 0 45px rgba(99, 102, 241, 0.6);
    text-decoration: none;
  }

  .hero__cta-arrow {
    transition: transform 0.2s ease;
  }
  .hero__cta:hover .hero__cta-arrow {
    transform: translateX(4px);
  }
</style>

---
export interface Props {
  text: string;
  align?: 'left' | 'center' | 'right';
}

const { text, align = 'center' } = Astro.props;
---

<div class="titulo2-block" style={`text-align: ${align};`}>
  <h2>{text}</h2>
</div>

<style>
  .titulo2-block {
    padding: 1.5rem 1rem;
  }
  .titulo2-block h2 {
    font-size: clamp(1.25rem, 3vw, 2rem);
    font-weight: 600;
    color: var(--color-heading, #1a1a2e);
    line-height: 1.3;
    margin: 0;
  }
</style>

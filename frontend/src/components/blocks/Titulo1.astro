---
export interface Props {
  text: string;
  align?: 'left' | 'center' | 'right';
}

const { text, align = 'center' } = Astro.props;
---

<div class="titulo1-block" style={`text-align: ${align};`}>
  <h1>{text}</h1>
</div>

<style>
  .titulo1-block {
    padding: 2rem 1rem;
  }
  .titulo1-block h1 {
    font-size: clamp(1.75rem, 4vw, 2.75rem);
    font-weight: 700;
    color: var(--color-heading, #1a1a2e);
    line-height: 1.2;
    margin: 0;
  }
</style>

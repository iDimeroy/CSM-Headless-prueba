---
interface Slide {
  title: string;
  description: string;
  imageUrl: string;
  ctaText?: string;
  ctaUrl?: string;
}

export interface Props {
  slides?: Slide[];
}

const { slides = [] } = Astro.props;
---
<section class="hero-slider">
  <div class="slider-wrapper">
    {slides.map((slide, index) => (
      <div class={`slide ${index === 0 ? 'active' : ''}`} data-index={index}>
        <div class="hero-image" style={`background-image: url('${slide.imageUrl}')`}></div>
        <div class="hero-overlay"></div>
        <div class="container hero-content">
          <div class="hero-text">
            <h1>{slide.title}</h1>
            <p>{slide.description}</p>
            {slide.ctaText && (
              <div class="hero-btns">
                <a href={slide.ctaUrl || '#'} class="btn btn-secondary">{slide.ctaText} &nbsp; â†’</a>
              </div>
            )}
          </div>
        </div>
      </div>
    ))}
  </div>

  <div class="slider-controls">
    <button class="prev-btn" aria-label="Anterior">
      <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polyline points="15 18 9 12 15 6"></polyline></svg>
    </button>
    <div class="slider-dots">
      {slides.map((_, index) => (
        <button class={`dot ${index === 0 ? 'active' : ''}`} data-index={index} aria-label={`Ir a slide ${index + 1}`}></button>
      ))}
    </div>
    <button class="next-btn" aria-label="Siguiente">
      <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polyline points="9 18 15 12 9 6"></polyline></svg>
    </button>
  </div>
  
  <div class="scroll-indicator">
    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M7 13l5 5 5-5M7 6l5 5 5-5"/></svg>
  </div>
</section>

<script>
  let currentSlide = 0;
  const slides = document.querySelectorAll('.slide');
  const dots = document.querySelectorAll('.dot');
  const totalSlides = slides.length;

  function showSlide(index) {
    slides.forEach(s => s.classList.remove('active'));
    dots.forEach(d => d.classList.remove('active'));
    
    slides[index].classList.add('active');
    dots[index].classList.add('active');
    currentSlide = index;
  }

  function nextSlide() {
    let next = (currentSlide + 1) % totalSlides;
    showSlide(next);
  }

  function prevSlide() {
    let prev = (currentSlide - 1 + totalSlides) % totalSlides;
    showSlide(prev);
  }

  // Event Listeners
  document.querySelector('.next-btn')?.addEventListener('click', nextSlide);
  document.querySelector('.prev-btn')?.addEventListener('click', prevSlide);
  
  dots.forEach(dot => {
    dot.addEventListener('click', () => {
      const index = parseInt(dot.getAttribute('data-index') || '0');
      showSlide(index);
    });
  });

  // Auto-play
  setInterval(nextSlide, 8000);
</script>

<style>
  .hero-slider {
    position: relative;
    height: 85vh;
    min-height: 600px;
    background: #000;
    color: white;
    overflow: hidden;
  }
  
  .slider-wrapper {
    position: relative;
    height: 100%;
  }
  
  .slide {
    position: absolute;
    inset: 0;
    opacity: 0;
    visibility: hidden;
    transition: all 1s ease-in-out;
    display: flex;
    align-items: center;
  }
  
  .slide.active {
    opacity: 1;
    visibility: visible;
    z-index: 1;
  }
  
  .hero-image {
    position: absolute;
    inset: 0;
    background-size: cover;
    background-position: center;
    transform: scale(1.1);
    transition: transform 10s linear;
  }
  
  .slide.active .hero-image {
    transform: scale(1);
  }
  
  .hero-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(to right, rgba(139, 21, 56, 0.8), rgba(139, 21, 56, 0.4), transparent);
    z-index: 2;
  }
  
  .hero-content {
    position: relative;
    z-index: 10;
  }
  
  .hero-text {
    max-width: 650px;
    transform: translateY(30px);
    opacity: 0;
    transition: all 0.8s cubic-bezier(0.4, 0, 0.2, 1) 0.5s;
  }
  
  .slide.active .hero-text {
    transform: translateY(0);
    opacity: 1;
  }
  
  .badge {
    display: inline-block;
    padding: 0.25rem 0.75rem;
    background: rgba(255, 255, 255, 0.2);
    backdrop-filter: blur(4px);
    border-radius: 2rem;
    font-size: 0.75rem;
    font-weight: 700;
    margin-bottom: 1.5rem;
    letter-spacing: 1px;
    border: 1px solid rgba(255, 255, 255, 0.3);
  }
  
  h1 {
    font-size: clamp(2.5rem, 5vw, 4rem);
    line-height: 1.1;
    margin-bottom: 1.5rem;
    text-shadow: 0 4px 12px rgba(0,0,0,0.3);
  }
  
  p {
    font-size: 1.25rem;
    opacity: 0.9;
    margin-bottom: 2.5rem;
    text-shadow: 0 2px 4px rgba(0,0,0,0.2);
  }
  
  .hero-btns {
    display: flex;
    gap: 1.5rem;
    flex-wrap: wrap;
  }
  
  /* Slider Controls */
  .slider-controls {
    position: absolute;
    bottom: 3rem;
    left: 0;
    right: 0;
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 2rem;
    z-index: 20;
  }
  
  .prev-btn, .next-btn {
    background: rgba(255, 255, 255, 0.1);
    color: white;
    border: 1px solid rgba(255, 255, 255, 0.2);
    width: 44px;
    height: 44px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    backdrop-filter: blur(4px);
    transition: all 0.3s ease;
  }
  
  .prev-btn:hover, .next-btn:hover {
    background: var(--color-secondary);
    border-color: var(--color-secondary);
    transform: scale(1.1);
  }
  
  .slider-dots {
    display: flex;
    gap: 0.75rem;
  }
  
  .dot {
    width: 10px;
    height: 10px;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.3);
    border: none;
    cursor: pointer;
    transition: all 0.3s ease;
  }
  
  .dot.active {
    background: var(--color-secondary);
    transform: scale(1.3);
  }
  
  .scroll-indicator {
    position: absolute;
    bottom: 1.5rem;
    left: 80%;
    animation: bounce 2s infinite;
    opacity: 0.5;
    z-index: 20;
  }
  
  @keyframes bounce {
    0%, 20%, 50%, 80%, 100% {transform: translateY(0);}
    40% {transform: translateY(-10px);}
    60% {transform: translateY(-5px);}
  }

  @media (max-width: 768px) {
    .hero-slider {
      height: 75vh;
    }
    .hero-text {
      text-align: center;
    }
    .hero-btns {
      justify-content: center;
    }
    .hero-overlay {
      background: rgba(139, 21, 56, 0.7);
    }
    .slider-controls {
      bottom: 2rem;
    }
    .scroll-indicator {
      display: none;
    }
  }
</style>

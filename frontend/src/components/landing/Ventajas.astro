---
export interface Props {
  title?: string;
  services?: {
    icon: string;
    name: string;
    description: string;
  }[];
}

const { title = 'Nuestros Servicios', services = [] } = Astro.props;
---
<section class="advantages-section">
  <div class="container">
    <div class="section-header">
      <span class="subtitle">LO QUE OFRECEMOS</span>
      <h2>{title}</h2>
    </div>
    
    <div class="advantages-grid">
      {services.map(srv => (
        <div class="advantage-card">
          <div class="icon-wrapper" set:html={srv.icon}></div>
          <h3>{srv.name}</h3>
          <p>{srv.description}</p>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .advantages-section {
    padding: 6rem 0;
    background: var(--color-bg-light);
  }
  
  .section-header {
    text-align: center;
    margin-bottom: 4rem;
  }
  
  .subtitle {
    color: var(--color-primary);
    font-weight: 700;
    font-size: 0.8rem;
    letter-spacing: 2px;
    display: block;
    margin-bottom: 0.5rem;
  }
  
  h2 {
    font-size: 2.5rem;
    color: var(--color-primary);
  }
  
  .advantages-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
  }
  
  .advantage-card {
    padding: 3rem 2rem;
    background: white;
    border-radius: 1.5rem;
    text-align: center;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    border: 1px solid #f1f5f9;
    box-shadow: var(--shadow-sm);
  }
  
  .advantage-card:hover {
    transform: translateY(-10px);
    box-shadow: var(--shadow-lg);
    border-color: var(--color-primary-light);
  }
  
  .icon-wrapper {
    width: 60px;
    height: 60px;
    background: rgba(139, 21, 56, 0.1);
    color: var(--color-primary);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 1.5rem;
    transition: all 0.3s ease;
  }
  
  .advantage-card:hover .icon-wrapper {
    background: var(--color-primary);
    color: white;
    transform: rotate(5deg) scale(1.1);
  }
  
  h3 {
    margin-bottom: 1rem;
    font-size: 1.25rem;
  }
  
  p {
    color: var(--color-text-light);
    font-size: 0.95rem;
    line-height: 1.6;
  }
</style>

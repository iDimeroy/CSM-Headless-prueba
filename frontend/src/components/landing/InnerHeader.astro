<header class="inner-header">
  <div class="top-logos">
    <div class="container logos-flex">
      <img src="https://cobatab.edu.mx/img/logo-tab.png" alt="Gobierno de Tabasco" class="inst-logo" />
      <img src="https://cobatab.edu.mx/img/logo-sep.png" alt="Educación" class="inst-logo" />
      <img src="https://cobatab.edu.mx/img/logo-cobatab.png" alt="COBATAB" class="inst-logo-cbt" />
    </div>
  </div>
  
  <nav class="inner-nav">
    <div class="container nav-flex">
      <ul class="nav-links">
        <li><a href="#">CORREO</a></li>
        <li class="has-dropdown"><a href="#">CONÓCENOS ▾</a></li>
        <li class="has-dropdown"><a href="#">SERVICIOS ▾</a></li>
        <li class="has-dropdown"><a href="#">TRANSPARENCIA ▾</a></li>
        <li><a href="#">JUNTA DIRECTIVA</a></li>
        <li><a href="#">DENUNCIAS</a></li>
        <li><a href="#">SIA</a></li>
      </ul>
      <div class="nav-right">
        <a href="/" class="home-tab" aria-label="Inicio">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path><polyline points="9 22 9 12 15 12 15 22"></polyline></svg>
        </a>
      </div>
    </div>
  </nav>
</header>

<style>
  .inner-header {
    background: white;
    box-shadow: var(--shadow-sm);
    position: relative;
    z-index: 100;
  }
  
  .top-logos {
    padding: 1.25rem 0;
    border-bottom: 1px solid #f1f5f9;
  }
  
  .logos-flex {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  
  .inst-logo {
    height: 45px;
  }
  
  .inst-logo-cbt {
    height: 55px;
  }
  
  .inner-nav {
    background: #f8fafc;
    border-bottom: 1px solid #e2e8f0;
    position: relative;
  }
  
  .nav-flex {
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 60px;
    padding-right: 0 !important;
  }
  
  .nav-links {
    display: flex;
    gap: 1.5rem;
    list-style: none;
  }
  
  .nav-links a {
    font-size: 0.8rem;
    font-weight: 700;
    color: #475569;
    letter-spacing: 0.5px;
    text-transform: uppercase;
  }
  
  .nav-links a:hover {
    color: var(--color-primary);
  }
  
  .nav-right {
    height: 100%;
    display: flex;
    align-items: stretch;
  }
  
  .home-tab {
    background: var(--color-primary);
    color: white;
    width: 80px;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    transition: all 0.3s ease;
  }
  
  .home-tab::before {
    content: '';
    position: absolute;
    left: -20px;
    top: 0;
    bottom: 0;
    width: 40px;
    background: var(--color-primary);
    transform: skewX(-20deg);
    z-index: -1;
  }
  
  .home-tab:hover {
    background: var(--color-primary-light);
    width: 90px;
  }
  
  .home-tab:hover::before {
    background: var(--color-primary-light);
  }


  @media (max-width: 968px) {
    .nav-links {
      display: none;
    }
  }
</style>

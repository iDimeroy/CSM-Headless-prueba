---
interface Props {
  title: string;
}
const { title } = Astro.props;
---
<div class="page-banner">
  <div class="container">
    <div class="banner-content">
      <h1>{title}</h1>
    </div>
  </div>
</div>

<style>
  .page-banner {
    background: var(--color-primary);
    padding: 2.5rem 0;
    color: white;
    text-align: center;
    box-shadow: inset 0 -10px 20px rgba(0,0,0,0.1);
  }
  
  h1 {
    font-size: 2rem;
    font-weight: 700;
    margin: 0;
    letter-spacing: 0.5px;
  }
</style>
